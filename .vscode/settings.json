{
  "// MISSION CONTROL": "Agent-First Workspace Configuration for Lattice Core",

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true
  },

  "task.autoDetect": "on",
  "task.problemMatchers.neverPrompt": {
    "shell": true
  },

  "terminal.integrated.env.linux": {
    "LATTICE_CORE_MODE": "agent-first",
    "MISSION_CONTROL_ACTIVE": "true"
  },
  "terminal.integrated.env.osx": {
    "LATTICE_CORE_MODE": "agent-first",
    "MISSION_CONTROL_ACTIVE": "true"
  },

  "antigravity.agentOrchestration.enabled": true,
  "antigravity.missionControl.autoArtifacts": true,
  "antigravity.agents.defaultModel": "claude-opus-4-5",
  "antigravity.agents.fallbackModel": "gemini-3-pro",

  "latticeCore.digitalMirror.enabled": true,
  "latticeCore.agents.architect.active": true,
  "latticeCore.agents.builder.active": true,
  "latticeCore.agents.auditor.active": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/__pycache__": true,
    "**/artifacts/temp": true
  },

  "files.associations": {
    "*.protocol": "markdown",
    "AGENT_PROTOCOL.md": "markdown",
    "manifest.json": "json"
  }
}
